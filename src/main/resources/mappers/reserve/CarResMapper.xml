	<select id="selectedCar" resultMap="carResultMap">
		SELECT
		*
		FROM COM_CAR
		WHERE DEL_YN='N'
		  AND CAR_NO = #{ carIndex }
	</select>
	
	<insert id="reserveCar">
		INSERT INTO RES_CAR
		VALUES
		(
			SEQ_CAR_RES_NO.NEXTVAL,
			#{ memberNo },
			#{ carNo },
			#{ startTime },
			#{ endTime },
			#{ carPurpose },
			DEFAULT
		)
	</insert>
	
	<!-- 예약 중인 차량을 반납 상태로 바꾸는 쿼리문 -->
	<update id="updateCarStatus">
		UPDATE RES_CAR
		SET
		DEL_YN = 'Y'
		WHERE RES_NO = #{ resNo }
	</update>
	
	<!-- 차량 예약 수정 쿼리문 -->
	<update id="modifyCarRes">
		UPDATE RES_CAR
		SET
		START_TIME = #{ startTime },
		END_TIME = #{ endTime },
		CAR_PURPOSE = #{ carPurpose, jdbcType=VARCHAR}
		WHERE RES_NO = #{ resNo }
	
	</update>
	
	<!-- 내 예약 조회 쿼리문 -->
	<select id="selectMyResCarList" resultMap="carResResultMap">
		SELECT
		*
		FROM RES_CAR A
		JOIN COM_CAR B ON (A.CAR_NO = B.CAR_NO)
		WHERE A.END_TIME > SYSDATE       
          AND A.DEL_YN = 'N'
          AND A.NO = #{ no }
        ORDER BY A.START_TIME DESC
	
	</select>
	
</mapper>